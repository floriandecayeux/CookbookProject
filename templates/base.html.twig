<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Cookbook{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('assets/bulma.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/style.css') }}">
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <nav class="navbar is-danger is-fixed-top" role="navigation">
                <div class="navbar-menu">
                    <div class="navbar-start">
                        <a class="navbar-item is-white" href="https://bulma.io">
                            <img src="{{ asset('icons/logo.png') }}" alt="Cookbook">
                        </a>
                    </div>
                    <div class="navbar-end">
                        <a class="navbar-item" href="">Inscription</a>
                        <div class="navbar-item">
                            <a class="button is-white" href="">
                            <span class="icon">
                                <i class="fas fa-sign-in-alt"></i>
                            </span>
                                <span>Se connecter</span>
                            </a>
                        </div>
                    </div>
                </div>
            </nav>

            <div class="parallax-window" style="width:100%; height:500px;" data-parallax="scroll" data-image-src="{{ asset('icons/header.jpg') }}">

            </div>

            <!--<section class="hero is-large is-transparent has-text-left">
                <div class="hero-body">
                    <div class="container">

                    </div>
                </div>
            </section>-->

            <section class="hero is-white is-fullheight">
                <div class="hero-body">
                    <div class="container">
                        <h1 class="title">
                            Primary bold title
                        </h1>
                        <h2 class="subtitle">
                            Primary bold subtitle
                        </h2>
                    </div>
                </div>
            </section>

            <footer class="footer">
                <div class="container">
                    <div class="content has-text-centered">
                        <p>
                            <strong>Bulma</strong> by <a href="https://jgthms.com">Jeremy Thomas</a>. The source code is licensed
                            <a href="http://opensource.org/licenses/mit-license.php">MIT</a>. The website content
                            is licensed <a href="http://creativecommons.org/licenses/by-nc-sa/4.0/">CC BY NC SA 4.0</a>.
                        </p>
                    </div>
                </div>
            </footer>
        {% endblock %}
        {% block javascripts %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
            <script type="text/javascript" src="{{ asset('assets/parallax.js-1.5.0/parallax.js') }}"></script>
        {% endblock %}
    </body>
</html>
