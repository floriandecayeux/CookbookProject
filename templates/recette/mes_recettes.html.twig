{% extends 'base.html.twig' %}

{% block title %}Mes Recettes{% endblock %}

{% block stylesheets %}{{ parent() }}{% endblock %}

{% block content %}
	<div class="parallax-window hero has-text-centered" style="width:100%; height:200px;" data-parallax="scroll" data-image-src="{{ asset('icons/header.jpg') }}">
		<section class="hero is-medium is-primary is-bold">
			<div class="hero-body">
				<div class="container">
					<h1 class="title">
						Primary bold title
					</h1>
					<h2 class="subtitle">
						Primary bold subtitle
					</h2>
				</div>
			</div>
		</section>
	</div>
	<div class="has-background-white hero is-fullheight">
		<div class="container" style="padding-top: 1rem;">
            {% if recettes is defined %}
                {% for recette in recettes %}
					<div class="card column is-3">
						<div class="card-image">
							<figure class="image is-4by3">
								<img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
							</figure>
						</div>
						<div class="card-content">
							<div class="media">
								<div class="media-content">
									<p class="title is-4">{{ recette.titre }}</p>
									<p class="subtitle is-6">@johnsmith</p>
								</div>
							</div>

							<div class="content">

							</div>
						</div>
					</div>
                {% endfor %}
            {% endif %}
		</div>
	</div>
	<div class="parallax-window" style="width:100%; height:200px;" data-parallax="scroll" data-image-src="{{ asset('icons/background.png') }}">
	</div>
{% endblock %}

{% block javascripts %}{{ parent() }}{% endblock %}
